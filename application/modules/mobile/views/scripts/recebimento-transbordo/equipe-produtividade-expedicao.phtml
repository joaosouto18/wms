                        <td><input type="checkbox" value="<?php echo $operador['id'] ?>" name="mass-id[]" checked></td>
                    <?php else :?>
                        <td><input type="checkbox" value="<?php echo $operador['id'] ?>" name="mass-id[]"></td>
                    <?php endif; ?>
                    <td style="text-align:left">&nbsp;<?php echo $operador['nome'] ?></td>
                </tr>
