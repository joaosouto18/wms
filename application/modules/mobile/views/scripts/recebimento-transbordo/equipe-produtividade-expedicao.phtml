<form id="formGrid" method="post" action="">
    <table>
        <tbody>
        <tr>
            <td colspan="1"></td>
            <td bgcolor="aqua" width=""><span><?php echo utf8_encode('EXPEDIÇÃO TRANSBORDO'); ?></span></td>
        </tr>

        <?php if (!isset($this->idExpedicao) && empty($this->idExpedicao) && !isset($this->placa) && empty($this->placa)) : ?>
            <tr>
                <td width=""><span><?php echo utf8_encode('Placa Carga'); ?></span></td>
                <td width=""><span><?php echo utf8_encode('Expedição'); ?></span></td>
            </tr>
            <td><input type="text" name="placa" id="placa"></td>
            <td><input type="text" name="idExpedicao" id="idExpedicao"></td>
        <?php else : ?>
