<script>
    $('#qtd_fake').on('keyup', function (e) {
        var qtdEmbalagem = <?php echo $this->qtdEmbalagem ?>;
        $('#qtd').val(qtdEmbalagem * $(this).val());
    });

    $(document).ready(function () {
        var inptLote = $("#lote");
        var inptEnd = $("#novoEndereco");
        var inptNivel = $("#nivel");
        if (!isEmpty(inptLote)) {
            inptLote.focus();
            return;
        }
        if (!isEmpty(inptEnd)) {
            inptEnd.focus();
            return;
        }
        if (!isEmpty(inptNivel)) {
            inptNivel.focus();
        }
    });

    $("input:text").keydown(function (e) {
        if (e.which == 13 || e.keyCode == 13) {
            var inptQtd = $("#qtd_fake");
            var inptLote = $("#lote");
            var inptNovoEndereco = $("#novoEndereco");
            var inptNivel = $("#nivel");

            if ($(this) === inptQtd)
                if (inptLote)
                    inptLote.select();
                else
                    inptNovoEndereco.select();
            else if ($(this) === inptNovoEndereco)
                inptNivel.select();

            if (e.preventDefault) {
                e.preventDefault();
            } else {
                e.returnValue = false;
            }
        }
        return true;
    })

</script>

