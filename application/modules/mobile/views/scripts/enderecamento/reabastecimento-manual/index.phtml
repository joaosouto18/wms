<script>
    $(document).keypress(function (e, v) {
        if (e.which == 13) {
            if (($.trim($("#codigoBarras").val()) == '')) {
                $("#codigoBarras").focus();
                e.preventDefault();
                return false;
            } else if ($.trim($("#qtd").val()) == '') {
                $("#qtd").focus();
                e.preventDefault();
                return false;
            }
        }
    });
</script>
