<script>

    function formSubmit(event)
    {
        qtd = document.getElementById('qtd');
        codigoBarras = document.getElementById('codigoBarras');

        if (codigoBarras) {
            if (qtd.value !== "" && qtd.value !== "") {
                loadResult();
            }
        }

        if (event.preventDefault) {
            event.preventDefault();
        } else {
            event.returnValue = false;
        }

    }

    function loadResult()
    {
        qtd = document.getElementById('qtd');
        codigoBarras = document.getElementById('codigoBarras');

        qtd.disabled = true;
        codigoBarras.disabled = true;

        document.getElementById('retorno').innerHTML = 'Pesquisando...';

        load(document.getElementById('formulario').action, 'formulario', function (xhr) {
            document.getElementById('retorno').innerHTML = '';

            qtd.disabled = false;
            codigoBarras.disabled = false;
            qtd.value = "1";
            codigoBarras.value = ""
            codigoBarras.focus();

            xmlDoc = xhr.responseXML;

            x = xmlDoc.getElementsByTagName("retorno");
            i = 0;

            exibeMensagem(x, i);
        });
    }

    function exibeMensagem(x, i)
    {


        var message = 'Error';
        if (x[i].getElementsByTagName("message").length > 0) {
            message = (x[i].getElementsByTagName("message")[0].childNodes[0].nodeValue);
            document.getElementById("retorno").innerHTML = message;
        }

        if (x[i].getElementsByTagName("resposta").length > 0) {
            status = (x[i].getElementsByTagName("resposta")[0].childNodes[0].nodeValue);
            if (status == 'error') {
                try{
                    var audioElement = document.createElement('audio');
                    audioElement.setAttribute('src', '/alarme.mp3');
                    audioElement.play();
                    //playSound('/alarme.mp3');
                }
                catch(e){
                    alert(message);
                }
            }
        }
    }

    function selecionar() {
        $('#qtd').select();
    }

    function load() {
        qtd = document.getElementById('qtd');
        qtd.style.display = 'none';
        qtdLabel = document.getElementById('label-qtd');
        qtdLabel.style.display = 'none';
    }

    function exibirQtd(event) {
        if (event.which == 13 || event.keyCode == 13) {

            qtd = document.getElementById('qtd');
            qtdLabel = document.getElementById('label-qtd');
            if (qtd) {
                qtd.style.display = 'block';
                qtdLabel.style.display = 'block';
                qtd.focus();
                if(event.preventDefault) {
                    event.preventDefault();
                } else {
                    event.returnValue = false;
                }
            }

            var codBarras = $('#codigoBarras').val();
            dadosProdutos = '';
            $.ajax({
                url: '/mobile/expedicao/consulta-produto/codigoBarras/' + codBarras,
                type: 'get',
                success: function (data) {
                    var codProduto         = data['result']['codProduto'];
                    var grade              = data['result']['grade'];
                    var descricao          = data['result']['descricao'];
                    var quantidade         = data['result']['quantidade'];
                    var descricaoEmbalagem = data['result']['descricaoEmbalagem'];

                    dadosProdutos = '<tr><td colspan="2"><b>Cod Produto: </b>'+codProduto+' - <b>Grade: </b>'+grade+'</td></tr>' +
                        '<tr><td colspan="2"><b>Descrição: </b>'+descricao+'</td></tr>' +
                        '<tr><td colspan="2"><b>Embalagem: </b>'+descricaoEmbalagem+' ('+quantidade+')</td></tr>';
                    $('#dados-produtos').html(dadosProdutos);
                }
            });
        }
        return true;
    }

    function nextInput(event) {
        if (event.which == 13 || event.keyCode == 13) {
            if (document.getElementById('qtd').value != "") {
                codigoBarras = document.getElementById('codigoBarras');
                if (codigoBarras) {
                    codigoBarras.focus();
                    if(event.preventDefault) {
                        event.preventDefault();
                    } else {
                        event.returnValue = false;
                    }
                }
            }
        }
        return true;
    }

</script>

